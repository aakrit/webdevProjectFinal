<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %></td>
    <td><%= event.time %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'UPDATE', edit_event_path(event) %></td>
    <td><%= link_to 'JOIN', "/events/join/#{event.id}", method: 'post' %></td>
    <td><%= link_to 'DELETE', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

